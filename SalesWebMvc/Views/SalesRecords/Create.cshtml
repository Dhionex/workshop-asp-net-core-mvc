@model SalesWebMvc.Models.ViewModels.SalesRecordViewModel



@{
    ViewData["Title"] = "Create";
}

<h2>@ViewData["Title"]</h2>

<h4>
    Vendas
</h4>

<hr />
<div class="row">
    <div class="col-md-4">
         <form asp-action="Create">
             <div class="form-group">
                 <label asp-for="SalesRecord.Date" class="control-label"></label>
                 <input asp-for="SalesRecord.Date" class="form-control" />

                 <div></div>

                 <label asp-for="SalesRecord.Amount" class="control-label"></label>
                 <input asp-for="SalesRecord.Amount" class="form-control" />
                 <label asp-for="SalesRecord.SelerId" class="control-label">

                 </label>
                 <select asp-for="SalesRecord.SelerId" asp-items="@(new SelectList(Model.Sellers, "Id" , "Nome"))" class="form-control"></select>


           
                 
             </div>
         </form>
    </div>

</div>